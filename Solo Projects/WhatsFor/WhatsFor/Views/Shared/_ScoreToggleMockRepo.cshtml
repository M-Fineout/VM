
@model Post


<script type="text/javascript">
         document.addEventListener("DOMContentLoaded", function () {
             var button = document.getElementById('@Model.Id');
             var test = document.getElementById("'span'@Model.Score");
             button.addEventListener('click', function () {
                 if (button.className == "btn btn-primary") {
                     var score = @Model.IncrementScore(Model.Score);
                     button.className = "btn btn-secondary";
                     console.log(score);
                     test.textContent = "Score: " + score; 
                     
                 }
                 else  {
                     var score = @Model.DecrementScore(Model.Score);
                     button.className = "btn btn-primary";
                     console.log(score);
                     test.textContent = "Score: " + score;
                 }
                 
             });
         });
</script>








